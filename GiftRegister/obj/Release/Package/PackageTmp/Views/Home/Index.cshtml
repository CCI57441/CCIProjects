@model GiftRegister.Models.GiftGivenModel

@{
    ViewBag.Title = "Index";
}
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>

<link href="~/Content/Gifts.css" rel="stylesheet" />


<script type="text/javascript">
    $(function () {
        $("#givinguu").click(function () {
            $.ajax({
                type: "Get",
                url: "/Home/GiftGiven",
                data: '{}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    if (response == true) {
                        alert("You will now be redirected.");

                    }
                }
            });
        });
    });
</script>
<script type="text/javascript">
$(function () {
    $("#giving").click(function(){
window.location.href = "@Url.Action("GiftGiven", "Home")";
    });


});

    $(function () {
        $("#receiving").click(function(){
window.location.href = "@Url.Action("GiftReceived", "Home")";
    });


});
</script>
<div class="container" style="margin-top:100px;">

    <div class="jumbotron text-center">
        <h1 style=" font-size: 263px;">
            <i class="fa fa-gift giftIcon" aria-hidden="true"></i>

        </h1>
        @*<h2>Gift Register</h2>*@

    </div>

    <div class="row">

        <div class="col-lg-6 col-xs-12">
            <div class="small-box bg-purple" id="giving" onclick="RedirectToGive();">
                <div class="inner">
                    <i id="giftGive" class="fa fa-gift" aria-hidden="true"></i>
                    <h4 style="margin-left:20%; padding-bottom:5%; color:#fff;">
                        I am declaring a gift that I have given
                    </h4>
                </div>

            </div>
        </div>

        <div class="col-lg-6 col-xs-12">
            <div class="small-box bg-blue" id="receiving" onclick="RedirectToReceive();">
                <div class="inner">
                    <i id="giftReceive" class="fa fa-gift" aria-hidden="true"></i>
                    <h4 style="margin-left:20%; padding-bottom:5%; color:#fff;">
                        I am declaring a gift that I have received
                    </h4>
                </div>

            </div>
        </div>

    </div>


</div>
